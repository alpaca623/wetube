extends layouts/main.pug

block content
    .video__player
        video(src=`/${video.fileUrl}`, control=true)
    .video__info
        a(href=routes.editVideo(video.id)) Edit video
        h5.video__title=video.title
        span.video__views=video.views
        p.video__descrption=video.description
    .video__comments
        if(video.comments.lenght === 1)
            span.video_comment-number 1 comment
        else
            span.video_comment-number #{video.comments.length} comments