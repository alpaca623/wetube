extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}` method="POST"  enctype="multipart/form-data")
            |Video File
            input(type="file" name="videoFile" placeholder="Choose File" accept="video/*")
            input(type="text" name="title" placeholder="Title" require=true)
            textarea(name="description", cols="30", rows="10" placeholder="Description" require=true)
            input(type="submit" value="Upload Video")